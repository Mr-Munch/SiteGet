
<% if current_user.id != post_image.user_id %>
	<% if post_image.user.followed_by?(current_user) %>
	    <p><%=link_to "フォロー済み", user_relationships_path(post_image.user_id), method: :delete, class: "btn btn-danger btn-block", remote: true %></p>
    <% else %>
		<p><%=link_to "フォローする", user_relationships_path(post_image.user_id), method: :post, class: "btn btn-primary btn-block", remote: true %></p>
	<% end %>
<% end %>