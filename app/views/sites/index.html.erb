<div class="index-all">
	<h1>Site</h1>
	<div class="site-index clearfix">
		<% @sites.each do |site| %>
			<% if PostImage.exists?(site_id: site.id) %>
				<% site.post_images.each do |post_image| %>
					<% if post_image.user_id == current_user.id %>

						<%= link_to site_post_image_path(id: post_image.id, site_id: post_image.site_id ) do  %>
						<%= attachment_image_tag post_image, :image, :fill, 200, 200, format: "jpeg", style: "cursor:pointer" %>
						<% end %>
						<!-- 2.モーダルの配置 -->

					<% else %>
						<%= link_to site_path(site.id), class: "no-image" do  %>
							<%= render 'sites/site', site: site %>
						<% end %>
					<% end %>
				<% end %>

			<% else %>
				<%= link_to site_path(site.id), class: "no-image" do  %>
					<%= render 'sites/site', site: site %>
				<% end %>
			<% end %>
		<% end %>
	</div>
</div>

